{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "https://chaaklau.github.io/jig/schemas/display",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "tones": {
            "type": "array",
            "$ref": "#/$def/tone_object"
        }
    },
    "required": [
        "name",
        "tones"
    ],
    "$def": {
        "tone_object": {
            "type": "object",
            "properties": {
                "label": {
                    "type": "string"
                },
                "begin": {
                    "type": "number",
                    "min": -1.0,
                    "max": 1.0
                },
                "mid": {
                    "type": "number",
                    "min": -1.0,
                    "max": 1.0
                },
                "end": {
                    "type": "number",
                    "min": -1.0,
                    "max": 1.0
                },
                "extender": {
                    "type": "object",
                    "properties": {
                        "character": {
                            "type": "string"
                        },
                        "side": {
                            "enum": [
                                "front",
                                "end",
                                "both"
                            ]
                        },
                        "minlength": {
                            "type": "integer"
                        }
                    }
                },
                "color": {
                    "type": "string"
                }
            }
        }
    }
}